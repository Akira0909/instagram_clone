<% provide(:title, @user.user_name) %>
<div class="row">
  <aside>
    <section class="user_info">
      <h1>
      	<img class="user_image" src="<%= "/user_images/#{@user.image_name}" %>">
        <%= @user.user_name %>
      </h1>
      <p><%= link_to("お気に入りの投稿", likes_user_path ) %></p>
      <% if current_user == @user %>
        <p><%= link_to("プロフィール編集", edit_user_registration_path ) %></p>
        <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
      <% end %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="microposts-box">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.microposts.any? %>
      <h3>投稿 (<%= @user.microposts.count %>)</h3>
      <div class="pictures-wrapper">
        <% @microposts.each do |micropost| %>
          <%= image_tag micropost.picture.url, class:'pictures' if micropost.picture? %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>