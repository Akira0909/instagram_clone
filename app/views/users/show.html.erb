<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user == current_user %> 
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title mx-auto" id="exampleModalLabel">プロフィール写真を変更</h4>
              </div>
              <div class="modal-body">
                <span class="link-font"><%= link_to "写真をアップロード", picture_edit_path(id: @user.id) %></span>
              </div>
              <div class="modal-body">
                <span class="denger-link"><%= link_to "現在の写真を削除", picture_delete_path(id: @user.id), method: "post" %></span>
              </div>
              <div class="modal-body-b">
                <span data-dismiss="modal">キャンセル</span>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <img class="user_image link-font" data-toggle="modal" data-target="#myModal"
          src="<%= "/user_images/#{@user.image_name}" %>">
        <%= @user.user_name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if user_signed_in? %>
    <p><%= @user.self_introduction %></p>
  </aside>
  <div class="col-md-4">
    <div class="user_info_box">
      <p><%= link_to("お気に入りの投稿", likes_user_path ) %></p>
      <% if current_user == @user %>
        <p><%= link_to("プロフィール編集", edit_user_registration_path ) %></p>
        <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
        <p>
          <%= link_to "アカウント削除", registration_path(@user),
            data: { confirm: "本当によろしいですか?" }, method: :delete %>
        </p>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="microposts-box">
    <% if @user.microposts.any? %>
      <h3>投稿 (<%= @user.microposts.count %>)</h3>
      <div class="pictures-wrapper">
        <%= render 'shared/micropost_modal' %>
        <% @microposts.each do |micropost| %>  
          <% if micropost.picture? %>
            <img class="pictures link-font" data-toggle="modal" data-target="#Modal-<%= micropost.id %>" src="<%= micropost.picture.url %>">
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>