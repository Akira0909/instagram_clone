<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Instagram", root_path, id: "logo" %>
    <% if user_signed_in? %>
      <%= search_form_for @search do |f| %>
        <%= f.search_field :content_cont, class: 'search-form', placeholder: 'キーワードを入力...' %>
        <%= f.submit "検索", class: 'search-form-submit' %>
      <% end %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "通知", notifications_path %></li>
          <li><%= link_to "ユーザー", users_path %></li>
          <li><%= link_to current_user.user_name, current_user %></li>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>